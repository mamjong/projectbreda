<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="nl.gemeente.breda.bredaapp.CheckDataActivity">

    <ImageView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/CheckDataActivity_iv_defectImage"
        android:layout_width="0dp"
        android:layout_height="192dp"
        android:layout_centerHorizontal="true"
        android:paddingBottom="8dp"
        android:paddingTop="8dp"
        android:src="@color/colorAccentDark"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/CheckDataActivity_tv_category"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/CheckDataActivity_tv_category"
        android:textSize="18sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="8dp"
        app:layout_constraintVertical_bias="0.491"
        android:layout_marginLeft="42dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.15" />

    <TextView
        android:id="@+id/CheckDataActivity_tv_categoryInput"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:textSize="16sp"
        app:layout_constraintLeft_toLeftOf="@+id/CheckDataActivity_tv_category"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/CheckDataActivity_tv_category"
        android:layout_marginLeft="0dp" />

    <TextView
        android:id="@+id/CheckDataActivity_tv_kindOfDefect"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/CheckDataActivity_tv_kindOfDefect"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/CheckDataActivity_tv_category"
        app:layout_constraintStart_toEndOf="@id/CheckDataActivity_tv_category"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.491"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.63"
        tools:layout_editor_absoluteY="237dp"
        android:layout_marginLeft="8dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Error"
        android:textSize="16sp"
        app:layout_constraintLeft_toLeftOf="@+id/CheckDataActivity_tv_kindOfDefect"
        app:layout_constraintTop_toBottomOf="@+id/CheckDataActivity_tv_kindOfDefect"/>

    <ImageView
        android:id="@+id/CheckDataActivity_iv_locationObject"
        android:layout_width="0dp"
        android:layout_height="157dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="?attr/darkBackground"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="48dp"
        app:layout_constraintHorizontal_bias="0.363"/>

    <Button
        android:id="@+id/CheckDataActivity_bt_confirmReportButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="?attr/normalBackground"
        android:text="@string/CheckDataActivity_bt_confirmReportButton"
        android:textColor="@android:color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintLeft_toRightOf="parent"
        app:layout_constraintRight_toLeftOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/CheckDataActivity_iv_locationObject"
        app:layout_constraintVertical_bias="1.0" />

</android.support.constraint.ConstraintLayout>
