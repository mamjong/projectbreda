<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="nl.gemeente.breda.bredaapp.AddEmailActivity">

    <TextView
        android:id="@+id/AddEmailActivity_tv_introText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/AddEmailActivity_tv_introText"
        android:textAlignment="center"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@id/AddEmailActivity_sp_introEmail"
        app:layout_constraintLeft_toRightOf="parent"
        app:layout_constraintRight_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Space
        android:id="@+id/AddEmailActivity_sp_introEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/AddEmailActivity_tv_introText"
        app:layout_constraintLeft_toRightOf="parent"
        app:layout_constraintRight_toLeftOf="parent"
        app:layout_constraintBottom_toTopOf="@id/AddEmailActivity_tv_emailaddress"
        />

    <TextView
        android:id="@+id/AddEmailActivity_tv_emailaddress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="43dp"
        android:text="@string/AddEmailActivity_tv_emailaddress"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@+id/AddEmailActivity_et_emailInput"
        app:layout_constraintBottom_toTopOf="@id/AddEmailActivity_et_emailInput"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintLeft_toRightOf="parent"
        app:layout_constraintRight_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/AddEmailActivity_sp_introEmail" />

    <EditText
        android:id="@+id/AddEmailActivity_et_emailInput"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="parent"
        app:layout_constraintRight_toLeftOf="parent"
        app:layout_constraintBottom_toTopOf="@id/AddEmailActivity_sp_emailInputTerms"
        android:ems="10"
        android:inputType="textEmailAddress"
        app:layout_constraintHorizontal_bias="0.499"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/AddEmailActivity_sp_introEmail" />

    <Space
        android:id="@+id/AddEmailActivity_sp_emailInputTerms"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/AddEmailActivity_et_emailInput"
        app:layout_constraintLeft_toRightOf="parent"
        app:layout_constraintRight_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/AddEmailActivity_tv_TermsText"
        />

    <TextView
        android:id="@+id/AddEmailActivity_tv_TermsText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/AddEmailActivity_sp_emailInputTerms"
        app:layout_constraintLeft_toRightOf="parent"
        app:layout_constraintRight_toLeftOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/AddEmailActivity_bt_emailConfirmButton"
        android:text="@string/AddEmailActivity_tv_TermsText"
        app:layout_constraintHorizontal_bias="0.499"
        android:layout_marginBottom="8dp" />

    <CheckBox
        android:id="@+id/AddEmailActivity_cb_termsAccepted"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/AddEmailActivity_tv_TermsText"
        app:layout_constraintLeft_toRightOf="parent"
        app:layout_constraintRight_toLeftOf="parent"
        app:layout_constraintBottom_toTopOf="@id/AddEmailActivity_bt_emailConfirmButton"
        android:text="@string/AddEmailActivity_cb_termsAccepted" />

    <Button
        android:id="@+id/AddEmailActivity_bt_emailConfirmButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:text="@string/AddEmailActivity_bt_emailConfirmButton"
        android:textColor="@android:color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintLeft_toRightOf="parent"
        app:layout_constraintRight_toLeftOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_tobottomOf="parent" />

</android.support.constraint.ConstraintLayout>
