<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="nl.gemeente.breda.bredaapp.DetailedReportActivity">

    <ImageView
        android:id="@+id/DetailedReportActivity_IV_Image"
        android:layout_width="150dp"
        android:layout_height="150dp"
        app:srcCompat="@color/colorPrimaryDark"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        app:layout_constraintVertical_bias="0.00999999"
        android:adjustViewBounds="true"/>

    <TextView
        android:id="@+id/DetailedReportActivity_tv_reportText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/DetailedReportActivity_tv_reportText"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/detailedActivityReportImage"
        android:layout_marginLeft="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintVertical_bias="0.0" />

    <!--<com.google.android.gms.maps.MapView-->
        <!--android:id="@+id/fragmentMapView_FL_mapLayout"-->
        <!--android:name="com.google.android.gms.maps.SupportMapsFragment"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="185dp"-->
        <!--android:layout_marginBottom="8dp"-->
        <!--app:layout_constraintBottom_toBottomOf="parent"-->
        <!--tools:layout_editor_absoluteX="-8dp" />-->

    <FrameLayout
        android:id="@+id/fragmentMapView_FL_mapLayout"
        android:name="com.google.android.gms.maps.SupportMapsFragment"
        android:layout_width="0dp"
        android:layout_height="82dp"
        android:layout_marginLeft="3dp"
        android:layout_marginRight="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintVertical_bias="1.0"
        android:layout_marginStart="3dp"
        android:layout_marginEnd="8dp"></FrameLayout>

    <TextView
        android:id="@+id/DetailedReportActivity_tv_categoryText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/DetailedReportActivity_tv_categoryText"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/detailedActivityReportImage"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.023"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/fragmentMapView_FL_mapLayout"
        app:layout_constraintVertical_bias="0.0"
        android:layout_marginEnd="8dp"/>

    <TextView
        android:id="@+id/DetailedReportActivity_tv_kindOfDefectText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/DetailedReportActivity_tv_kindOfDefectText"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="35dp"
        app:layout_constraintTop_toBottomOf="@+id/detailedActivityExtraPriorityBtn"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/DetailedReportActivity_tv_categoryText"
        android:layout_marginLeft="8dp"
        />

    <Button
        android:id="@+id/detailedActivityExtraPriorityBtn"
        android:layout_width="162dp"
        android:layout_height="97dp"
        android:text="+1 "
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/detailedActivityReportImage"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/DetailedReportActivity_tv_reportText"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        app:layout_constraintVertical_bias="0.01999998" />

    <TextView
        android:id="@+id/DetailedReportActivity_tv_categoryInput"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:layout_marginBottom="5dp"
        app:layout_constraintBottom_toTopOf="@+id/fragmentMapView_FL_mapLayout"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/DetailedReportActivity_tv_categoryText"
        app:layout_constraintVertical_bias="0.060000002"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.025"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"/>

    <TextView
        android:id="@+id/DetailedReportActivity_tv_kindOfDefect"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:layout_marginBottom="7dp"
        app:layout_constraintBottom_toTopOf="@+id/fragmentMapView_FL_mapLayout"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/DetailedReportActivity_tv_categoryInput"
        android:layout_marginLeft="8dp"
        app:layout_constraintHorizontal_bias="0.461"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/DetailedReportActivity_tv_kindOfDefectText"
        app:layout_constraintVertical_bias="0.060000002"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"/>
</android.support.constraint.ConstraintLayout>
