    <ImageView
        android:id="@+id/navigation_header_logo"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:srcCompat="@drawable/rounded_corners"
        android:layout_marginLeft="0dp"
        app:layout_constraintLeft_toLeftOf="@+id/navigation_header_background"
        android:layout_marginRight="0dp"
        app:layout_constraintRight_toRightOf="@+id/navigation_header_background"
        app:layout_constraintBottom_toBottomOf="@+id/navigation_header_background"
        android:layout_marginBottom="0dp"
        app:layout_constraintTop_toTopOf="@+id/navigation_header_background"
