<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="nl.gemeente.breda.bredaapp.UserSettingsActivity">

    <TextView
        android:id="@+id/UserSettingsActivity_tv_AppSettings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:text="@string/UserSettingsActivity_tv_AppSettings"
        android:textColor="@color/colorDark"
        android:textSize="17sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/UserSettingsActivity_tv_currentEmailText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/UserSettingsActivity_tv_currentEmailText"
        android:textAlignment="center"
        android:textSize="14sp"
        android:layout_marginStart="8dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/UserSettingsActivity_et_currentEmail"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <EditText
        android:id="@+id/UserSettingsActivity_et_currentEmail"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="7dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:inputType="textEmailAddress"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:textAlignment="viewStart"
        android:textCursorDrawable="@null"
        app:layout_constraintBottom_toTopOf="@+id/UserSettingsActivity_btn_confirmEmail"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/UserSettingsActivity_tv_AccSettings"
        app:layout_constraintVertical_bias="0.215"/>

    <TextView
        android:id="@+id/UserSettingsActivity_tv_AccSettings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:text="@string/UserSettingsActivity_tv_AccSettings"
        android:textColor="@color/colorDark"
        android:textSize="17sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.502"
        android:layout_marginBottom="132dp"
        app:layout_constraintBottom_toTopOf="@+id/UserSettingsActivity_btn_confirmEmail"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/view3"
        app:layout_constraintVertical_bias="0.13"/>

    <SeekBar
        android:id="@+id/UserSettingsActivity_sb_ChangeRadius"
        android:layout_width="250dp"
        android:layout_height="19dp"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="62dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/UserSettingsActivity_tv_AppSettings"
        />

    <TextView
        android:id="@+id/UserSettingsActivity_tv_currentRadius"
        android:layout_width="85dp"
        android:layout_height="21dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="43dp"
        android:text="TextView"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/UserSettingsActivity_tv_AppSettings"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintLeft_toRightOf="@+id/UserSettingsActivity_sb_ChangeRadius"
        android:layout_marginLeft="8dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/UserSettingsActivity_sp_ChangeTheme"
        app:layout_constraintHorizontal_bias="0.28"
        app:layout_constraintVertical_bias="0.387"/>

    <TextView
        android:id="@+id/UserSettingsActivity_tv_RadiusTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="1dp"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:text="@string/radius_title"
        app:layout_constraintBottom_toTopOf="@+id/UserSettingsActivity_sb_ChangeRadius"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <View
        android:id="@+id/view3"
        android:layout_width="368dp"
        android:layout_height="2dp"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:background="@android:color/darker_gray"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toBottomOf="@+id/UserSettingsActivity_sp_ChangeTheme"
        app:layout_constraintHorizontal_bias="0.0"/>

    <TextView
        android:id="@+id/UserSettingsActivity_tv_ThemeTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:text="@string/settings_theme"
        app:layout_constraintBottom_toTopOf="@+id/UserSettingsActivity_sp_ChangeTheme"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <Spinner
        android:id="@+id/UserSettingsActivity_sp_ChangeTheme"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="40dp"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/UserSettingsActivity_sb_ChangeRadius"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"/>

    <Button
        android:id="@+id/UserSettingsActivity_btn_confirmEmail"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="?attr/normalBackground"
        android:text="@string/confirm_email"
        android:textColor="?attr/mainTextColor"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

</android.support.constraint.ConstraintLayout>
