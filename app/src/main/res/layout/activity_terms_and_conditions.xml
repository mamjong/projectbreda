<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="nl.gemeente.breda.bredaapp.TermsAndConditionsActivity">

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:padding="8dp">

        <LinearLayout
            android:layout_width="368dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            tools:layout_editor_absoluteY="0dp"
            tools:layout_editor_absoluteX="8dp">

            <TextView
                android:id="@+id/activityTermsAndConditions_tv_termsandconditions"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/activityTermsAndConditions_tv_termsandconditions" />

            <Button
                android:id="@+id/activityTermsAndConditions_bt_continue"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/activityTermsAndConditions_bt_continue" />
        </LinearLayout>
    </ScrollView>
</android.support.constraint.ConstraintLayout>
